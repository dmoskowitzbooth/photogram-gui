<h1> List of photos </h1>

<form action="/add_photo" method="post">

  <label for="image">Image</label>
  <input id="image" type="text" name="the_image" placeholder="Enter a URL for the image">
   <label for="caption">Caption</label>
  <textarea id="caption" name="the_caption" placeholder="Enter a caption for the photo..."></textarea>
     <label for="owner_id">Owner ID</label>
  <input id="owner_id" type="text" name="the_owner" placeholder="Enter an ID of a user">


<button type="submit">
Add photo
</button>
</form>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Caption
    </th>

 <th>
      Owner
    </th>
 <th>
      Posted
    </th>
    

    <th>
    </th>
  </tr>

  <% @list_of_photos.each do |photo| %>
  <tr>
    </td>
      <td><img src="<%=photo.image %>" style="width:250px;"></td>
   <td>
      <%= photo.caption %>
    </td>

  <td>
      <%= photo.poster.username %>
    </td>
      <td>
      <%= photo.created_at %>
    </td>
        <td>
      <a href="/photos/<%= photo.id %>">
        Show details
      </a>
    </td>
 
  </tr>
  <% end %>
</table>
